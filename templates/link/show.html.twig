{% extends 'base.html.twig' %}

{% block title %}Lien{% endblock %}

{% block body %}
    <h1>Lien</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ link.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ link.decription }}</td>
            </tr>
            <tr>
                <th>Mot-clé</th>
                <td>{{ link.tag ? link.tag|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Go to 🌐</th>
                <td><a href="{{ link.url }}" target="_blank">🔗</a></td>
            </tr>
        </tbody>
    </table>
    <div class="link_actions">
        <a href="{{ path('app_link_index') }}">Retour à la liste des liens</a>
        {% if isAdmin %}
            <a href="{{ path('app_link_edit', {'id': link.id}) }}">Modifier</a>
            {{ include('link/_delete_form.html.twig') }}
        {% endif %}
    </div>




{% endblock %}
