{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Texte</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.texte }}</td>
                <td>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}"><i class="fa-solid fa-eye"></i></a>
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}"><i class="fa-solid fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="create-new" href="{{ path('app_article_new') }}"><i class="fa-solid fa-plus"></i>&nbsp;&nbsp;Create new</a>
{% endblock %}
